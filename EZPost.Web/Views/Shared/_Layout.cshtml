@using System.Threading
@using System.Web.Optimization
@using Abp.Timing
@using Abp.Web.Mvc.Extensions
@{
    SetAntiForgeryCookie();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="shortcut icon" href="~/icon.png">

    <title>EZPost</title>
    <!--框架必需start-->
    <link href="~/Content/styles/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/scripts/plugins/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Content/scripts/jquery/jquery-1.10.2.min.js"></script>
    <script src="~/Content/scripts/plugins/datepicker/WdatePicker.js"></script>
    <link href="~/Content/scripts/plugins/datepicker/skin/WdatePicker.css" rel="stylesheet" />
    <script src="~/Content/scripts/plugins/jquery-ui/jquery-ui.min.js"></script>
    <link href="~/Content/scripts/plugins/datatable1.10/css/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/adminBeyond/css/beyond.min.css" rel="stylesheet" />
    <script src="~/Content/adminBeyond/js/beyond.min.js"></script>
    <!--框架必需end-->
    <!--bootstrap组件start-->
    <link href="~/Content/scripts/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/scripts/bootstrap/bootstrap.min.js"></script>
    <!--bootstrap组件end-->
    <!--DataTable start-->
    <script src="~/Content/scripts/plugins/datatable1.10/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/scripts/plugins/datatable1.10/js/dataTables.bootstrap.js"></script>
    <script src="~/Scripts/DataTables.js"></script>
    <!--DataTable end-->
    <script src="~/Content/scripts/plugins/dialog/dialog.js"></script>

    <link href="~/Scripts/sweetalert/sweet-alert.css" rel="stylesheet" />


    <!-- View specific styles -->
    @RenderSection("styles", required: false)

    <script type="text/javascript">
        //This is used to get the application's root path from javascript. It's useful if you're running application in a virtual directory under IIS.
        var abp = abp || {}; abp.appPath = '@ApplicationPath';
    </script>

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="@Url.Content("~/Scripts/others/html5shiv.js")"></script>
        <script src="@Url.Content("~/Scripts/others/respond.min.js")"></script>
    <![endif]-->

    @Scripts.Render("~/Bundles/vendor/js/top")
    <script src="~/Content/scripts/plugins/layout/jquery.layout.js"></script>
    
    @System.Web.Optimization.Styles.Render(
    "~/Content/scripts/plugins/datetime/css",
    "~/Content/styles/lenton-ui.css")
    @System.Web.Optimization.Scripts.Render(
    "~/Content/scripts/plugins/validator/js",
    "~/Content/scripts/utils/js")
</head>
<body>
        @RenderBody()
    @Scripts.Render("~/Bundles/vendor/js/bottom")
    @Scripts.Render("~/Bundles/js")
    <script src="~/Scripts/sweetalert/sweet-alert.min.js"></script>
    <script>
        //Localizing momentjs
        moment.locale('@Thread.CurrentThread.CurrentUICulture.Name');
    </script>

    <!-- Dynamic scripts of ABP system (They are created on runtime and can not be bundled) -->
    <script src="~/api/AbpServiceProxies/GetAll?v=@(Clock.Now.Ticks)"></script>
    <script src="~/AbpScripts/GetScripts?v=@(Clock.Now.Ticks)" type="text/javascript"></script>

<!-- SignalR scripts -->
    <!--注释，已经在index.html里引入-->
    @*<script src="~/signalr/hubs"></script>
    @Html.IncludeScript("~/Abp/Framework/scripts/libs/abp.signalr.js")*@

    <script>
        var tabAdd = function (id, url) {
            top.tablist.newTab({
                id: id,
                title: id,
                closed: true,
                icon: "fa fa-globe",
                url: url
            });
        };    

    </script>
<!-- View specific scripts -->
    @RenderSection("scripts", required: false)
</body>
</html>
